{
  "enabled": true,
  "showDotFiles": true,
  "showHiddenFolders": true,
  "patterns": [
    ".mermaid-config.json",
    ".obsidian/**/*.json",
    ".gitignore",
    ".envrc",
    ".env"
  ],
  "excludePatterns": [
    "**/.DS_Store",
    "**/.git/**",
    "**/node_modules/**",
    "**/__pycache__/**"
  ],
  "showInFileExplorer": true,
  "highlightHiddenFiles": true,
  "highlightColor": "#4A90E2",
  "opacity": 0.7,
  "debug": false
}
